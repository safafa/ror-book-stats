<div class="w-100 my-3  ">
  <div class="d-flex align-content-start">
    <%if @book.group%>
    <%= show_icon(@book.group.icon)%>
    <% end %>
    <div class="ms-2 d-flex flex-column">
        <h1 ><%=@book.name%></h1>
    </div>
  </div>
    <div>
       <small> Total amount of hours: <%= @book.amount%></small>
        <% if @book.group %>
        <small> Group: <%= @book.group.name%></small>
        <%end%>
    </div>
    <%= link_to "Edit", edit_book_path(@book.id), class:"navbar_link mx-2" %>
    <%= link_to "Delete", book_path(@book.id), method: :delete, class:"navbar_link" %>
    
</div>





