<%= form_with model: book do |form|%>
  <%= form.label :name, "Name: ", class: "form-label text-center"%>
  <%= form.text_field :name, class: "form-control" %>
  <%= form.label :amount, "Amount of time: ", class: "form-label text-center"%>
  <%= form.number_field :amount, class: "form-control" %>
  <%= form.label :group, "Belongs to group: ", class: "form-label text-center"%>
  <%= form.select(:group_id, current_user.groups.map { |group| ["#{group.name}", group.id] } << ["", nil] , class: "form-control" )%>
  </br>
  <%= form.submit "Submit", class: "btn btn-primary" %>
<%end%>